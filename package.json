{
  "name": "file-matcher",
  "version": "1.2.0",
  "description": "Return list of files, matching by file attributes or/and contents",
  "main": "index.js",
  "scripts": {
    "clean": "npx shx rm -rf ./build ./coverage",
    "tslint": "npx tslint -c tslint.json '**/*.ts' -e 'node_modules/**'",
    "cp-package": "npx shx cp ./package.json ./build/file-matcher/",
    "cp-md": "npx shx cp *.md ./build/file-matcher/",
    "build": "npm run clean &&  npm run tslint && tsc && npm run cp-package && npm run cp-md",
    "test": "npx shx mkdir -p ./test/sandbox/c && npm run build && npx jasmine ./build/file-matcher/test/**/*.spec.js",
    "coverage": "npx nyc --reporter=json npm test && npx shx mv coverage/coverage-final.json coverage/coverage.json && npx remap-istanbul -i coverage/coverage.json -o coverage/coverage.json && npx istanbul report lcov && npx istanbul report text",
    "travis": "npm run coverage && npx shx cat ./coverage/lcov.info | coveralls && npx shx rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriciovigolo/file-matcher.git"
  },
  "keywords": [
    "file matcher",
    "filematcher",
    "file match",
    "find file",
    "fs",
    "file finder",
    "recursive",
    "glob",
    "walk",
    "walker",
    "events",
    "promise",
    "contents",
    "find",
    "directory",
    "grep",
    "search",
    "sniffer",
    "regex",
    "micromatch",
    "typescript"
  ],
  "author": {
    "name": "Mauricio Gemelli Vigolo",
    "email": "mauriciovigolo@gmail.com"
  },
  "engines": {
    "node": ">=6.9.2",
    "npm": ">=3.10.9"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mauriciovigolo/file-matcher/issues"
  },
  "homepage": "https://github.com/mauriciovigolo/file-matcher",
  "devDependencies": {
    "@types/jasmine": "^2.5.46",
    "@types/micromatch": "^2.3.29",
    "@types/node": "^7.0.8",
    "coveralls": "^2.12.0",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.3",
    "nyc": "^10.1.2",
    "remap-istanbul": "^0.9.1",
    "shx": "^0.2.2",
    "tslint": "^4.5.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "micromatch": "^3.0.0"
  },
  "nyc": {
    "include": [
      "build/file-matcher/**/*.js"
    ],
    "exclude": [
      "build/file-matcher/**/*.spec.js"
    ]
  }
}

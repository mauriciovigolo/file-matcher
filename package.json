{
  "name": "file-matcher",
  "version": "2.0.0",
  "description": "Return list of files, matching by file attributes or/and contents",
  "main": "index.js",
  "scripts": {
    "clean": "node node_modules/shx rm -rf ./build ./coverage",
    "tslint": "node node_modules/tslint",
    "test": "npx shx mkdir -p ./test/sandbox/c && npm run build && npx jasmine ./build/file-matcher/test/**/*.spec.js",
    "build": "npm run clean && npm run tslint && node node_module/tsc && npm run build:post",
    "build:post": "node node_modules/shx cp {package.json,README.md} ./dist/file-matcher/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriciovigolo/file-matcher.git"
  },
  "keywords": [
    "file match",
    "find file",
    "fs",
    "file finder",
    "recursive",
    "glob",
    "contents",
    "find",
    "directory",
    "grep",
    "search",
    "sniffer",
    "regex",
    "micromatch",
    "typescript"
  ],
  "author": {
    "name": "Mauricio Gemelli Vigolo",
    "email": "@mauriciovigolo"
  },
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.0.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mauriciovigolo/file-matcher/issues"
  },
  "homepage": "https://github.com/mauriciovigolo/file-matcher",
  "devDependencies": {
    "@types/node": "^11.13.4",
    "@types/jest": "^24.0.11",
    "shx": "^0.3.2",
    "jest": "^24.7.1",
    "ts-jest": "24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": "\\.spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage"
  }
}
